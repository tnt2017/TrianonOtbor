<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentHome">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="50dp"
        android:layout_marginTop="0dp">

        <TextView
            android:id="@+id/txtxtx1txtx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Трианон - Версия 6.8 (05.08.2022)"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/base_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Версия базы: "
            android:textStyle="bold"
            android:textSize="20dp"
            android:textAlignment="center"
            />
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Ваш ID"
            android:textSize="20dp" />


        <EditText
            android:id="@+id/EditTextIdemp"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Ваш сектор"
            android:textSize="20dp"
            />

        <EditText
            android:id="@+id/EditTextIzone"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="1"
            />
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtxtxtxtx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Для сохранения"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp"
        android:layout_marginTop="130dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Логин (необяз):"
            android:textSize="20dp"
            />


        <EditText
            android:id="@+id/EditTextLogin"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp"
        android:layout_marginTop="165dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Пароль (необяз):"
            android:textSize="20dp"
            />

        <EditText
            android:id="@+id/EditTextPass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPassword"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp"
        android:layout_marginTop="200dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Координаты:"
            android:textSize="20dp"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/main_latt"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:text="latt" />

        <TextView
            android:id="@+id/main_lngt"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:text="lngt" />
    </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:layout_marginTop="250dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtxtxtxt11x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Режим работы"
            android:textSize="20dp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="309dp"
            android:orientation="horizontal">


            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="200dp"
                android:layout_height="350dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radio_invent"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:checked="true"
                    android:text="Инвентаризация"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/radio_priemka"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Приемка"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/radio_trans"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Транспортировка"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/radio_complekt"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Комплектовка"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/radio_complekt2"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Комплектовка2"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/radio_otbor"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Отборка (new!)"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/radio_rasstanovka"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Расстановка"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/radio_prisvoenie"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Присвоение ячеек"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/radio_newdoc"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Новый документ"
                    android:textSize="18sp" />


                <RadioButton
                    android:id="@+id/radio_priem_qr"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Прием QR-кодов"
                    android:textSize="18sp" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="402dp"
                android:orientation="vertical">


                <CheckBox
                    android:id="@+id/checkBox_flash"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Вспышка" />

                <Button
                    android:id="@+id/button_start"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Отметиться" />

                <Button
                    android:id="@+id/button_save"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Сохранить" />

                <Button
                    android:id="@+id/button_download"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Скачать БД" />

                <Button
                    android:id="@+id/button_test"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Тест БД" />

                <Button
                    android:id="@+id/button_md"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Создать папку" />


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>