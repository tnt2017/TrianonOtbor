<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentMayack">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="100dp"
        >
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_Latitude"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView_Longitude"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="TextView" />



        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <TextView
            android:id="@+id/textView_client"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="TextView"
        />


        <TextView
            android:id="@+id/textView_idadr"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="TextView" />

            <TextView
                android:id="@+id/mayack_idorg"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="0" />

        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/selectifghfgh"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Название контрагента:"
            android:textSize="16sp" />

        <AutoCompleteTextView
            android:id="@+id/mayak_org"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="160dp">


        <Button
            android:id="@+id/button_savenote"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="Отметиться в точке" />

        <EditText
            android:id="@+id/mayack_prim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Текст заметки" />
    </LinearLayout>





    <LinearLayout
        android:id="@+id/layout1111"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="220dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_pay"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="Принять оплату" />

        <EditText
            android:id="@+id/mayack_summa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:width="100dp"
            android:text="0" />

    </LinearLayout>





    <LinearLayout
        android:id="@+id/layout11112"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="320dp"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="191dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:src="@drawable/common_google_signin_btn_icon_dark" />

    <LinearLayout
        android:id="@+id/dfngdklfg"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:orientation="vertical">

    <Button
        android:id="@+id/button_make_photo"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Сделать фото" />


    <Button
        android:id="@+id/button_send_photo"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Отправить фото" />
    </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/layout12345"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="430dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/selection"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Выбранный элемент"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="100dp"
            android:layout_height="wrap_content"></Spinner>

        <Button
            android:id="@+id/button_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Создать задачу" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="560dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_getclient"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:text="Узнать клиента" />

        <Button
            android:id="@+id/button_newclient"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:text="Завести клиента" />
    </LinearLayout>
</FrameLayout>