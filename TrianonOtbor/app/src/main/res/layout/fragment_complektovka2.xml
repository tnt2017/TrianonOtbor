<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentTovsheet">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/complektovka2_idsheet"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:text="2003433932" />

            <Button
                android:id="@+id/complektovka2_getlist_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="Поиск по ID листа"></Button>

            <ImageButton
                android:id="@+id/complektovka2_save"
                android:src="@drawable/iconsave"
                android:layout_width="144dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Сохранить" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinner_trips"
                android:layout_width="100dp"
                android:layout_height="30dp"></Spinner>

           <EditText
                android:id="@+id/complektovka2_trip"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="trip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <EditText
                android:id="@+id/complektovka2_barcodes"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_complektovka2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                tools:listitem="@layout/fragment_item_complektovka2" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>