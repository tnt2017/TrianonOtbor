<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentMayack">

    <LinearLayout
        android:id="@+id/layout111162"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

    <EditText
        android:id="@+id/photo_idtrip"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:text="210003389" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout11112"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/photo_imageView"
        android:layout_width="191dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:src="@drawable/common_google_signin_btn_icon_dark" />

    <LinearLayout
        android:id="@+id/dfngdklfg"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:orientation="vertical">

    <Button
        android:id="@+id/photo_make_photo"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Сделать фото" />


    <Button
        android:id="@+id/photo_send_photo"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Отправить фото" />
    </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout11156532"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="150dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/photo_textView_prim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Текст заметки" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout12345"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="300dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/selection"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Выбранный элемент"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="100dp"
            android:layout_height="wrap_content"></Spinner>

        <Button
            android:id="@+id/button_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Создать задачу" />

    </LinearLayout>
</FrameLayout>