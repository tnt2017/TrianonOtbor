<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="300dp"
        android:background="#ffffff"
        android:layout_height="match_parent"
        android:padding="3dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/informerID"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="ID рейса"
            android:textColor="@color/colorPrimary"
            android:onClick="onClick"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="300dp"
            android:background="#ffffff"
            android:layout_height="20dp"
            >

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Врея отправления "
            android:id="@+id/informerDSTART"
            android:layout_below="@+id/tovIDL"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="italic"/>

        <TextView
            android:layout_width="50dp"

            android:layout_height="wrap_content"

            android:text="КГ"
            android:id="@+id/informerKG"
            android:layout_below="@+id/tovIDL"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="italic"/>


            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="М3"
                android:id="@+id/informerM3"
                android:layout_below="@+id/tovIDL"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="italic"/>

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="LINES"
                android:id="@+id/informerLINES"
                android:layout_below="@+id/tovIDL"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="italic"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DSTAMP"
            android:id="@+id/informerDSTAMP"
            android:layout_below="@+id/tovIDL"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="italic"/>

    </LinearLayout>


    </LinearLayout>

