<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1c"
            android:id="@+id/docum_prihod_tovSector"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="28dp"

            android:textStyle="italic"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/docum_prihod_tovName"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Название товара"
            android:textColor="@color/colorPrimary"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Штрихкод"
            android:id="@+id/docum_prihod_tovBarcode"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/docum_prihod_tovIDL"
            android:layout_width="wrap_content"
            android:layout_height="0px"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="IDL"
            android:textStyle="italic" />


        <TextView
            android:id="@+id/docum_prihod_tovSheet"
            android:layout_width="wrap_content"
            android:layout_height="0px"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="IdTovSheet"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <CheckBox
            android:id="@+id/docum_prihod_cbBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </CheckBox>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <EditText
                android:id="@+id/docum_prihod_kol1"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Кол1"
                android:textColor="@color/colorAccent"
                android:textSize="13dp" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
