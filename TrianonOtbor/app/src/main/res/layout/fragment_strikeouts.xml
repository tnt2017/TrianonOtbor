<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentStrikeouts">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp"
        android:layout_marginTop="0dp">

        <EditText
            android:id="@+id/strikeouts_dbeg"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="01.04.2020"
            android:textSize="18dp"
            />


        <EditText
            android:id="@+id/strikeouts_dend"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="02.04.2020"
            android:textSize="18dp"
            />


        <Button
            android:id="@+id/btn_strikeouts_apply"
            android:layout_width="144dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Применить" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="50dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerviewtest4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                tools:listitem="@layout/fragment_item_strikeout" />
        </LinearLayout>


</RelativeLayout>