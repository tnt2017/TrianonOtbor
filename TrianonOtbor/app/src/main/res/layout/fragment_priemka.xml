<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentTovsheet">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/priemka_dbeg"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="05.04.2021" />

            <EditText
                android:id="@+id/priemka_dend"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="09.04.2021" />

            <ImageButton
                android:id="@+id/btn_priemka_apply"
                android:src="@drawable/iconsave"
                android:layout_width="144dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Применить" />


        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_priemka_new"
            android:layout_width="144dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Новая приемка" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">




            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_tovsheets"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                tools:listitem="@layout/fragment_item_tovsheets" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>