<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1c"
            android:id="@+id/trans_tovSector"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="28dp"

            android:textStyle="italic"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:padding="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:padding="5dp">


        <TextView
            android:id="@+id/trans_tovSheet"
            android:layout_width="140dp"
            android:layout_height="25dp"
            android:onClick="onClick"
            android:text="ID листа"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/trans_tovSheetInfo"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="Штрихкод"
            android:textSize="18sp"
            android:textStyle="italic" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:padding="0dp">

            <TextView
                android:id="@+id/trans_Org"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:text="Организация"
                android:textSize="18sp"
                android:textStyle="italic" />
        </LinearLayout>

    </LinearLayout>




    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <CheckBox
            android:id="@+id/trans_cbBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </CheckBox>


        <EditText
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="Кол1"
            android:id="@+id/trans_kol1"
            android:layout_alignParentRight="true"
            android:textSize="13dp"
            android:textColor="@color/colorAccent"
            />



    </LinearLayout>


</LinearLayout>
