<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentSection">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/findtxtxtx1txtx11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Введите название контрагента:"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold" />

        <AutoCompleteTextView
            android:id="@+id/finddoc_org"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Контрагент" />

        <EditText
            android:id="@+id/finddoc_idorg"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="ID контрагента" />

        <EditText
            android:id="@+id/finddoc_idadr"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="ID адреса" />


        <TextView
            android:id="@+id/findtxtxtx1txtx112"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Введите название товара:"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold" />

        <AutoCompleteTextView
            android:id="@+id/finddoc_tov"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Товар" />

        <EditText
            android:id="@+id/finddoc_idtov"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="ID товара" />


        <Button
            android:id="@+id/finddoc_add_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="Добавить товар"></Button>


        <Button
            android:id="@+id/finddoc_savedoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="Создать документ"></Button>

        <EditText
            android:id="@+id/finddoc_tovar_barcodes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="" />
    </LinearLayout>
</RelativeLayout>