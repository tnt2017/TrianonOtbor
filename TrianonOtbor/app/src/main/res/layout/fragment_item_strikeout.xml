<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="320dp"
        android:background="#ffffff"
        android:layout_height="match_parent"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tovName"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="Название товара"
            android:textColor="@color/colorPrimary"
            android:onClick="onClick"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="300dp"
            android:background="#ffffff"
            android:layout_height="20dp"
            >

            <TextView
                android:id="@+id/strikeouts_tovSection"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/tovSection"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:text="Секция"
                android:textSize="18dp"
                android:textStyle="italic"

                />

            <TextView
                android:id="@+id/tovNNAKL"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tovNomenkl"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:text="tovNNAKL"
                android:textSize="18dp"
                android:textStyle="italic" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tovEMP"
                android:id="@+id/tovEMP"
                android:layout_below="@+id/tovEMP"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="italic"
                android:textSize="18dp" />
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="300dp"
            android:background="#ffffff"
            android:layout_height="match_parent"
            >

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="ID товара"
                android:id="@+id/tovID"
                android:layout_below="@+id/tovID"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/tovDSTAMP"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tovIDL"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:text="tovDSTAMP"
                android:textStyle="italic" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tovTRIP"
                android:id="@+id/tovTRIP"
                android:layout_below="@+id/tovEMP"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="italic"
                android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Кол-во"
            android:id="@+id/strikeouts_tovKol"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorAccent"
            />

        <CheckBox
            android:id="@+id/cbBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </CheckBox>

    </LinearLayout>


</LinearLayout>
