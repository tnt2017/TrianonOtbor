<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentNotMatched">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp"
        android:layout_marginTop="0dp">

        <EditText
            android:id="@+id/notmatched_ssec0"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:text="A-00-0"
            android:textSize="18dp"
            />


        <EditText
            android:id="@+id/notmatched_ssec1"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:text="Z-99-4"
            android:textSize="18dp"
            />


        <Button
            android:id="@+id/btn_notmatched_apply"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Поиск" />

        <Button
            android:id="@+id/btn_notmatched_save"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Сохр. инв." />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="0dp">

        <EditText
            android:id="@+id/notmatched_patt2"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:text="Строка"
            android:textSize="18dp"
            />

        <EditText
            android:id="@+id/notmatched_patt"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="тетрадь"
            android:textSize="18dp"
            />


        <EditText
            android:id="@+id/notmatched_days2"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="Дней"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/notmatched_days"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="1000"
            android:textSize="18dp"
            />

        <EditText
            android:id="@+id/notmatched_rsum2"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:text="Рублей"
            android:textSize="18dp"
            />

        <EditText
            android:id="@+id/notmatched_rsum"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="1"
            android:textSize="18dp"
            />
    </LinearLayout>

    </LinearLayout>





    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="100dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_notmatched"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                tools:listitem="@layout/fragment_item_strikeout" />
        </LinearLayout>


</RelativeLayout>