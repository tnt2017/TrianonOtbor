<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentSection">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtxtx1txtx11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Введите название контрагента:"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold" />

        <AutoCompleteTextView
            android:id="@+id/newdoc_org"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Контрагент" />

        <EditText
            android:id="@+id/newdoc_idorg"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="ID контрагента" />

        <EditText
            android:id="@+id/newdoc_idadr"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="ID адреса" />


        <TextView
            android:id="@+id/txtxtx1txtx112"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Введите название товара:"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold" />

        <AutoCompleteTextView
            android:id="@+id/newdoc_tov"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Товар" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/newdoc_idtov"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:text="ID товара" />

            <EditText
                android:id="@+id/newdoc_kolvo"
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:text="1" />

            <EditText
                android:id="@+id/newdoc_kolvo_lab"
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:text="штук" />
        </LinearLayout>

        <Button
            android:id="@+id/newdoc_add_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="Добавить товар"></Button>


        <Button
            android:id="@+id/newdoc_savedoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="Создать документ"></Button>

        <EditText
            android:id="@+id/newdoc_tovar_barcodes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="" />
    </LinearLayout>
</RelativeLayout>