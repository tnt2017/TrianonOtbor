<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="320dp"
        android:background="#ffffff"
        android:layout_height="match_parent"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tovName"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="Название товара"
            android:textColor="@color/colorPrimary"
            android:onClick="onClick"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="300dp"
            android:background="#ffffff"
            android:layout_height="20dp"
            >

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Секция"
            android:id="@+id/tovSection"
            android:layout_below="@+id/tovSection"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="italic"
            android:textSize="18dp"

            />

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Nomenkl"
            android:id="@+id/tovNomenkl"
            android:layout_below="@+id/tovNomenkl"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="italic"
            android:textSize="18dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kor"
                android:id="@+id/tovKor"
                android:layout_below="@+id/tovKor"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="italic"
                android:textSize="18dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="25dp"
            android:background="#ffffff"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tovID"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tovID"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:text="ID товара"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tovIDL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tovIDL"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:text="IDL"
                android:textStyle="italic" />
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="300dp"
            android:background="#ffffff"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/tovBARCODES"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tovID"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:text="Штрихкоды товара"
                android:textStyle="italic" />
        </LinearLayout>

    </LinearLayout>





<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Кол-во"
            android:id="@+id/tovKol"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorAccent"
            />

        <CheckBox
            android:id="@+id/cbBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </CheckBox>

    </LinearLayout>


</LinearLayout>
