<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentSection">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/textbox_section"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:text="D-01-1" />

            <EditText
                android:id="@+id/IdEmp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1900161" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">




                <Button
                    android:id="@+id/section_make_photo"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:text="Сделать фото" />


                <Button
                    android:id="@+id/section_send_photo"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:text="Отправить" />

        </LinearLayout>




        <EditText
            android:id="@+id/section_textView_prim"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="" />



        <Button
            android:id="@+id/section_button_prisvoenie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="Присвоить секцию"></Button>



        <EditText
            android:id="@+id/section_tovar_barcodes"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:text="" />

        <EditText
            android:id="@+id/section_status_msg"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:text="" />

    </LinearLayout>

</RelativeLayout>